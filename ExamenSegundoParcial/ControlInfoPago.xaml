<UserControl x:Class="ExamenSegundoParcial.ControlInfoPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>

        <TextBlock Margin="8,8,8,0" FontSize="22" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Simplex">3.Informacion de Pago</TextBlock>

        <TextBlock Margin="8,8,8,0" FontFamily="Tw Cen MT Condensed" FontSize="20">Número de tarjeta:</TextBlock>
        <TextBox Name="txtNumeroTarjeta" Margin="8,8,534,0"></TextBox>

        <TextBlock Margin="8,8,8,0" FontFamily="Tw Cen MT Condensed" FontSize="20">CVV:</TextBlock>
        <TextBox Name="txtCVV" Margin="8,8,534,0"></TextBox>

        <TextBlock Margin="8,8,8,0" FontFamily="Tw Cen MT Condensed" FontSize="20">Mes de expiracion:</TextBlock>
        <TextBox Name="txtMesExpiracion" Margin="8,8,534,0"></TextBox>

        <TextBlock Margin="8,8,8,0" FontFamily="Tw Cen MT Condensed" FontSize="20">Año de expiracion:</TextBlock>
        <TextBox Name="txtAñoExpiracion" Margin="8,8,534,0"></TextBox>
    
    </StackPanel>
    
</UserControl>
